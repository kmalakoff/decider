{
  "apiVersion": "extensions/v1beta1",
  "kind": "Ingress",
  "metadata": {
    "name": "local-forwarding",
    "namespace": "production"
  },
  "spec": {
    "rules": [
      {
        "host": "local-production-web.decider.com",
        "http": {
          "paths": [
            {
              "backend": {
                "serviceName": "web",
                "servicePort": 3000
              }
            }
          ]
        }
      },
      {
        "host": "local-production-api-read.decider.com",
        "http": {
          "paths": [
            {
              "backend": {
                "serviceName": "api-read",
                "servicePort": 3000
              }
            }
          ]
        }
      },
      {
        "host": "local-production-api-command.decider.com",
        "http": {
          "paths": [
            {
              "backend": {
                "serviceName": "api-command",
                "servicePort": 3000
              }
            }
          ]
        }
      }
    ]
  }
}