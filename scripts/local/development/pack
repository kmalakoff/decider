#!/bin/bash

tag=dev
namespace=decider

dir=`dirname $(greadlink -f ${BASH_SOURCE[0]} || readlink -f ${BASH_SOURCE[0]})`; cd $(dirname $(dirname $(dirname $dir)))

docker-compose -f $dir/cluster/docker-compose.yml build

path=$(pwd)
if [ -f $path/package.json ] && [ -f $path/Dockerfile.$tag ]; then
  file=${path##*/}
  file="$(echo $file | tr [:upper:] [:lower:])"
  docker run -v $(pwd):/home/nodejs/app -t $namespace/$file:$tag npm install
  docker run -v $(pwd):/home/nodejs/app -t $namespace/$file:$tag node_modules/.bin/lerna bootstrap --hoist
fi
